        <!-- /.navbar-static-side -->


        <div id="page-wrapper">
            @RenderBody()
            <footer>
                @MyRazorHelpers.FooterInformations()
            </footer>
            @MyRazorHelpers.FixTab()
            @MyRazorHelpers.FixTabTop()
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
