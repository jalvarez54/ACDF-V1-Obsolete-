                        <ul class="nav nav-second-level">
                            <li class="nav-header"><i class="fa fa-book"></i> Documents</li>
                            <li>@Html.ActionLink("Palmares & Tramp", "Index", "PdfViewer")</li>
                        </ul>
                        <!-- /.nav-second-level -->
