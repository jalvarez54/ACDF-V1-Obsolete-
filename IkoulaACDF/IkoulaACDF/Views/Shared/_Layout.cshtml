        var addthis_config = {
            data_ga_property: 'UA-48859953-1',
            data_ga_social: true
        };
    </script><!-- AddThis Button END -->

</head>
<body>
    <!-- /div-wrapper -->
    <div id="wrapper">

        <!-- /.navbar-fixed-top-collapse -->
        <div class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/Home"><img class="navbar-brand" title="HOME - ACDF-Casablanca-Maroc" style="border:0; background-color: transparent; padding:0; margin:0;" alt="Feedback" src="~/Content/images/Tramp50.png"> </a>
                <span class="navbar-brand hidden-xs hidden-sm" style="font-size:x-large">Anciens de Charles de Foucauld</span>
                <span class="navbar-brand visible-xs" style="font-size:x-small ">Anciens de Charles de Foucauld</span>
            </div>
            <!-- /.navbar-header -->
            <!-- /.navbar-top-links -->
            <div class="sidebar-collapse">

                <ul class="nav navbar-top-links navbar-right">

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-question-circle fa-fw"></i>  <i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-messages">
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li class="divider"></li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li>@Html.ActionLink("Management", "Index", "Account")</li>
                            }
                        </ul>

                        <!-- /.dropdown-messages -->
                    </li>
                    <li><a href="http://195.5.238.130/p-jalvarez/foucauld/" target="_blank" title="OLD ACDF Site"><i class="fa fa-external-link"></i></a></li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" title="Login/Logout User profile">
                            <i class="fa fa-user fa-fw"></i> @User.Identity.Name <i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                @Html.Partial("_LoginPartial")
                            </li>
                        </ul>
                    </li>
                    <!-- /.dropdown-user -->
                    <li>@MyRazorHelpers.AddThis()</li>
                </ul>
            </div>

        </div><!-- /.navbar-fixed-top-collapse -->

        <!-- /.navbar-static-side-collapse -->
        <div class="sidebar-collapse">
            <nav class="navbar-default navbar-static-side" role="navigation">
                <ul class="nav" id="side-menu">
                    <li>
                        <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i> Medias<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li class="nav-header"><i class="fa fa-picture-o"></i> Photos</li>
                            <li>@Html.ActionLink("Photos (Paged)", "Index", "Photo")</li>
                            <li>@Html.ActionLink("Photos (Gallery)", "Category", "Photo")</li>
                            <li>@Html.ActionLink("Photos (Last five)", "RecentPhoto", "Photo")</li>
                            <li class="divider"></li>
                            <li class="nav-header"><i class="fa fa-video-camera"></i> Videos</li>
                            <li>@Html.ActionLink("Videos", "Index", "Video")</li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-file-text fa-fw"></i> Documents<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li class="nav-header"><i class="fa fa-files-o"></i> Documents PDF</li>
                            <li>@Html.ActionLink("Divers", "Index", "PdfViewer")</li>
                            <li class="nav-header"><i class="fa fa-file-text"></i> Archives</li>
                            <li>@Html.ActionLink("Logos Tramp", "Tramp", "Home")</li>
                            <li>@Html.ActionLink("Anecdotes", "Anecdotes", "Home")</li>
                            <li>@Html.ActionLink("Archives", "Archives", "Home")</li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-sitemap fa-fw"></i> Rencontres<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li class="nav-header"><i class="fa fa-users"></i> Livre d'or</li>
                            <li>
                                <a href="@Url.Action("Index", "GuessBook")"><span>Livre d'or</span><span class="badge pull-right">@IkoulaACDF.Helpers.Utils.GetCountGuessBooks(this.Context)</span></a>
                            </li>
                            <li class="nav-header"><i class="fa fa-users"></i> Rencontres</li>
                            <li>@Html.ActionLink("Rencontres", "Todo", "Home")</li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                    <li>
                        <a href="@Url.Action("Create", "GuessBook")"><span><i class="fa fa-sign-in"></i> Signer le livre d'or</span></a>
                    </li>
                    <li>
                        <a href="@Url.Action("RestrictedUsersList", "Account")"><i class="fa fa-list"></i> <span>List des membres</span><span class="badge pull-right">@IkoulaACDF.Helpers.Utils.GetCountMembers(this.Context)</span></a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="https://acdfcasa.codeplex.com/" target="_blank"><i class="fa fa-code"></i> <span>Source code on CodePlex</span> <i class="fa fa-external-link"></i></a>
                    </li>
                </ul>
                <!-- /#side-menu -->
            </nav><!-- /.navbar-static-side-collapse -->
        </div>

        <!-- /page-wrapper -->
        <div id="page-wrapper" style="padding:10px 0 20px 15px">
            @RenderBody()
            @MyRazorHelpers.FixTab()
            @MyRazorHelpers.FixTabTop()
        </div><!-- /page-wrapper -->

        <!-- /footer -->
        <footer>
            @MyRazorHelpers.FooterInformations()
        </footer><!-- /footer -->
    </div><!-- /div-wrapper -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- GO TOP -->
    <script>
        $(document).ready(function () {

            // hide #back-top first
            $("#back-top").hide();

            // fade in #back-top
            $(function () {
                $(window).scroll(function () {
                    if ($(this).scrollTop() > 100) {
                        $('#back-top').fadeIn();
                    } else {
                        $('#back-top').fadeOut();
                    }
                });

                // scroll body to 0px on click
                $('#back-top a').click(function () {
                    $('body,html').animate({
                        scrollTop: 0
                    }, 800);
                    return false;
                });
            });

        });
    </script><!-- GO TOP END -->

</body>
</html>
